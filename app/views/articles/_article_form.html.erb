<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <% if !@article.images.empty? %>
      <% @article.images.each do |image| %>
        <%= image_tag image.url %>
      <% end %>
      <%= f.label :attachment, "Attach a New Image" %>
    <% else %>
      <%= f.label :attachment, "Attach an image" %><br />
    <% end %>
    <%= f.file_field :attachment %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
